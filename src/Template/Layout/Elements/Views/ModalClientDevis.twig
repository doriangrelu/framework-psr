<div class="modal fade" id="clientDevis" tabindex="-1" role="dialog" aria-labelledby="clientDevis"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Choix du client</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="cathegorie">Type de client</label>
                    <select name="cathegorie" id="cathegorie" class="form-control">
                        <option value="none">Choix du client</option>
                        <option value="pro">Professionnel</option>
                        <option value="part">Particulier</option>
                    </select>
                </div>
                <div class="form-group listeClient">

                    <select id="choixClientPro" class="form-control choixClient">
                        {% for part in parts %}
                            <option value="{{ part.id }}">{{  part.firstName | capitalize }} {{  part.lastName | capitalize }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Valider</button>
            </div>
        </div>
    </div>
</div>
<script type="text/template" id="clientsProfessionnels">
    <select id="choixClientPro" class="form-control choixClient">
        {% for pro in pros %}
            <option value="{{ pro.id }}">{{  pro.firstName | capitalize }} {{  pro.lastName | capitalize }}</option>
        {% endfor %}
    </select>
</script>
<script type="text/template" id="clientsParticuliers">
    <select id="choixClientPro" class="form-control choixClient">
        {% for part in parts %}
            <option value="{{ part.id }}">{{  part.firstName | capitalize }} {{  part.lastName | capitalize }}</option>
        {% endfor %}
    </select>
</script>